<% layout('./layouts/missingppllayout') -%>
<div class="clr" style="height:10px;"></div> 
<h4>New Missing Person</h4>
<form id="new_missing_person" class="form-horizontal" action="/missing" method="post" enctype='multipart/form-data'>
	<!--<div style="text-align:center;">
		<a data-toggle="modal" data-target="#citizenMissingModal">
			<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> 
			The person is a Citizen? Click here.
		</a>
	</div>	-->
	<div class="clr" style="height:20px;"></div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Picture</label>
		<div class="col-xs-9">
    	<div class="">
    		<input type="file" name='file' placeholder="Select file"/>
    	</div>
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">First Name</label>
		<div class="col-xs-9">
    	<input type="text" class="form-control" placeholder="First Name" name="firstname" required>
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Last Name</label>
		<div class="col-xs-9">
    	<input type="text" class="form-control" placeholder="Last Name" name="lastname" required>
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Age</label>
		<div class="col-xs-9">
    	<input type="number" class="form-control" placeholder="Age" name="age" >
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Height</label>
		<div class="col-xs-9">
    	<input type="number" class="form-control" placeholder="Height" name="height" >
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Weight</label>
		<div class="col-xs-9">
    	<input type="number" class="form-control" placeholder="Weight" name="weight" >
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Location</label>
		<div class="col-xs-9">
    	<input type="text" class="form-control" placeholder="Location" name="location">
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Last Seen</label>
		<div class="col-xs-9">
    	<input type="datetime" class="form-control" placeholder="Last Seen" name="lastseen"  value="2015-11-06T10:57Z">
		</div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">Description</label>
		<div class="col-xs-9">
    	<textarea class="form-control" rows="5" name="description" required></textarea>
		</div>
  </div>
	<div class="clr" style="height:20px;"></div>
	<div class="form-group">
	    <div class="col-xs-offset-3 col-xs-9">
				<a href="/missing/deck" class="btn btn-default" >Cencel</a>
		  	<button type="submit" class="btn btn-success" >Submit</button>
	    </div>
	  </div>
</form>

<% include ./partials/citizenMissing %>

